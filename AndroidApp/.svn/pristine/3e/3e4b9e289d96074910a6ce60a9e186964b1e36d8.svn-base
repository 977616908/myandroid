                    android:gravity="center"
                    android:onClick="onClick"
                    android:text="@string/zhuan_text_1"
                    android:textColor="@color/text_bg1"/>

                <TextView
                    android:id="@+id/textView_zll02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:drawableTop="@drawable/zll_03"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:text="@string/zhuan_text_2"
                    android:textColor="@color/text_bg1" />

                <TextView
                    android:id="@+id/textView_zll03"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:drawableTop="@drawable/zll_04"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:text="@string/zhuan_text_3" 
                    android:textColor="@color/text_bg1"/>

                <TextView
                    android:id="@+id/textView_zll04"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:drawableTop="@drawable/zll_01"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:text="@string/zhuan_text_4"
                    android:textColor="@color/text_bg1"/>
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/textView_zll05"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:drawableTop="@drawable/zll_02"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:text="@string/zhuan_text_5"/>

                <TextView
                    android:id="@+id/textView_zll06"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:drawableTop="@drawable/zll_03"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:text="@string/zhuan_text_6" />

                <TextView
                    android:id="@+id/textView_zll07"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:drawableTop="@drawable/zll_04"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:text="@string/zhuan_text_7" />

                <TextView
                    android:id="@+id/textView_zll08"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:drawableTop="@drawable/zll_01"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:text="@string/zhuan_text_8"/>
